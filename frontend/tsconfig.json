{
    "compilerOptions": {
        "declaration": true,
        "importHelpers": true,
        "sourceMap": true,
        "module": "ESNext",
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "target": "ES6",
        "composite": false,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noEmit": true,
        "moduleResolution": "node",
        "paths": {
            "@/Components/*": ["./src/Components/*"],
            "@/Context/*": ["./src/Context/*"],
            "@/Hooks/*": ["./src/Hooks/*"],
            "@/Models/*": ["./src/Models/*"],
            "@/Services/*": ["./src/Services/*"],
            "@/Utils/*": ["./src/Utils/*"],
            "@/Views/*": ["./src/Views/*"],
            "@/*": ["./src/*"]
          }
    },
    "include": [
        "src",
        "./src/types.d.ts",
        "src/**/*",
        "./css-modules.d.ts"
    ],
    "typedocOptions": {
        "entryPoints": [
            "src/pages/Dashboard.tsx",
            "src/pages/contract/GeneralPage.tsx"
        ],
        "out": "docs"
    }
}